<div class="main-header">
  <div class="header-left">
    <div class="header-title">Danke</div>
  </div>
  <div class="header-right">
    <div class="header-button">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>
<div class="main-chat">
  <div class="message">
    <div class="upper-message">
      <div class="user-name">Danke</div>
      <div class="message-date">2020/3/31(Wed) 12:43:30</div>
    </div>
    <div class="lower-message">
      <div class="content">おはよう</div>
    </div>
  </div>

  <div class="message">
    <div class="upper-message">
      <div class="user-name">Danke2</div>
      <div class="message-date">2020/3/31(Wed) 12:43:30</div>
    </div>
    <div class="lower-message">
      <div class="content">おはよう</div>
    </div>
  </div>
</div>
<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit  '送信', class: 'send' %>
<% end %>